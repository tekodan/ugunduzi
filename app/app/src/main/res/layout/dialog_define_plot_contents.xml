<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:id="@+id/crop1Label"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/enterCrop1Label"
                android:textColor="@color/colorPrimary"
                android:textSize="20dp" />

            <Button
                android:id="@+id/crop1Button"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:height="40dp"
                android:background="@drawable/button_background_light"
                android:text="@string/textNone"
                android:textColor="@color/colorWhite"
                android:textSize="20dp" />

            <TextView
                android:id="@+id/crop2Label"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/enterCrop2Label"
                android:textColor="@color/colorPrimary"
                android:layout_marginTop="20dp"
                android:textSize="20dp" />

            <Button
                android:id="@+id/crop2Button"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:height="40dp"
                android:background="@drawable/button_background_light"
                android:text="@string/textNone"
                android:textColor="@color/colorWhite"
                android:textSize="20dp" />

            <TextView
                android:id="@+id/treatment1Label"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/enterTreatment1Label"
                android:textColor="@color/colorPrimary"
                android:layout_marginTop="20dp"
                android:textSize="20dp" />

            <Button
                android:id="@+id/treatment1Button"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:height="40dp"
                android:background="@drawable/button_background_light"
                android:text="@string/textNone"
                android:textColor="@color/colorWhite"
                android:textSize="20dp" />

            <TextView
                android:id="@+id/treatment2Label"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/enterTreatment2Label"
                android:textColor="@color/colorPrimary"
                android:layout_marginTop="20dp"
                android:textSize="20dp" />

            <Button
                android:id="@+id/treatment2Button"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:height="40dp"
                android:background="@drawable/button_background_light"
                android:text="@string/textNone"
                android:textColor="@color/colorWhite"
                android:textSize="20dp" />

            <Button
                android:id="@+id/okButton"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:height="40dp"
                android:background="@drawable/button_background"
                android:text="@string/okButtonText"
                android:textColor="@color/colorWhite"
                android:textSize="20dp" />

        </LinearLayout>

    </ScrollView>

</LinearLayout>